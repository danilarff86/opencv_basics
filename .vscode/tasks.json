{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake configure",
            "type": "process",
            "command": "cmake",
            "options":{
                "cwd": "${workspaceRoot}/build",
                "env": {"OpenCV_DIR": "${workspaceRoot}/../build_opencv"}
            },
            "args": [
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_COMPILER_LAUNCHER=ccache",
                "../"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Ninja: build all",
            "type": "process",
            "command": "ninja",
            "options":{
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "all"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Ninja: clean",
            "type": "process",
            "command": "ninja",
            "options":{
                "cwd": "${workspaceRoot}/build"
            },
            "args": [
                "clean"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run: display_image",
            "type": "process",
            "command": "./display_image",
            "options":{
                "cwd": "${workspaceRoot}/build/00_display_image"
            },
            "args": ["${workspaceRoot}/00_display_image/lena.jpg"],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
